@page
@model RecipeMate.Pages.Recipe
@using static RecipeMate.Models.Utilities.StringExtensions

@{
    ViewData["Title"] = "Recipe";
}

<div class="text-center mt-3">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @if (Model.Recipes == default)
            {
                <div class="col">
                    <p>There are no recipes to display.</p>
                </div>
            }
            else
            {
                @foreach (var recipe in Model.Recipes)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Title">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@recipe.Title</h5>
                                <a asp-page="/RecipeDetails" asp-route-slug="@recipe.Id-@recipe.Title.ToSlug()" class="btn btn-primary mt-auto">View Recipe</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>